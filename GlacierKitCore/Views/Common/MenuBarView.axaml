<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:gkv="using:GlacierKitCore.Views"
			 xmlns:gkv_common="using:GlacierKitCore.Views.Common"
			 xmlns:gkvm="using:GlacierKitCore.ViewModels"
			 xmlns:gkvm_common="using:GlacierKitCore.ViewModels.Common"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:Class="GlacierKitCore.Views.Common.MenuBarView">

	<Design.DataContext>
		<gkvm_common:MenuBarViewModel/>
	</Design.DataContext>
	

	<Menu
		x:Name="PART_Menu"
		Items="{Binding RootItems}"
	>
		<Menu.Styles>
			<Style Selector="MenuItem">
				<Setter Property="Header" Value="{Binding Title, Mode=OneWay}"/>
				<Setter Property="Items" Value="{Binding ChildItems, Mode=OneWay}"/>
				<Setter Property="Command" Value="{Binding Click, Mode=OneWay}"/>
			</Style>
		</Menu.Styles>
	</Menu>
</UserControl>
